@{
    ViewData["Title"] = "Search Products";
}

<h2>Search Products</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Search" method="post">
            <div class="form-group">
                <label for="searchName" class="control-label">Product Name</label>
                <input type="text" name="searchName" id="searchName" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="getAllProduts" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
